
@{
    ViewBag.Title = "Unit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts {
    <link href="~/Content/CustomStyle.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/AngularDemo.js"></script>
}
<div ng-app="demoModule" id="body">
    <div ng-controller="demoCtrl">
        <h2>AngularJS CRUD Operations with MVC5 WebAPI</h2>
        <h3>List of Units</h3>
        <table ng-cloak>
            <thead>
                <tr>
                    <th style="display: none;">ID</th>
                    <th>Unit name</th>
                    <th>Unit code</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="items in unitData">
                    <td hidden="hidden">{{items.Id}}</td>
                    <td>{{items.UnitName}}</td>
                    <td>{{items.UnitCode}}</td>
                    <td>
                        <button ng-model="$scope.Unit"
                                ng-click="edit(unitData[$index])">
                            Edit
                        </button>
                        <button ng-click="delete($index)">Delete</button>
                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="6">
                        <hr />
                    </td>
                </tr>
            </tfoot>
        </table>
        <br />
        <div style="border-top: solid 2px #282828; width: 430px; height: 10px"> </div>
        <div ng-show="Unit.Id != '' ">
            <div>
                <h2>Update Unit</h2>
            </div>
            <div hidden="hidden">
                <label for="id">Id</label>
                <input type="text" data-ng-model="Unit.Id" />
            </div>
            <div>
                <label for="unit name">Unit name</label>
                <input type="text" data-ng-model="Unit.UnitName" />
            </div>
            <div>
                <label for="unit code">Unit code</label>
                <input type="text" data-ng-model="Unit.UnitCode" />
            </div>
            <br />
            <div>
                <button data-ng-click="update()">Update</button>
                <button data-ng-click="cancel()">Cancel</button>
            </div>
        </div>
        <div ng-hide="Unit.Id != '' ">
            <div>
                <h2>Add New Unit</h2>
            </div>
            <div>
                <label for="unit name">Unit name</label>
                <input type="text" data-ng-model="Unit.UnitName" />
            </div>
            <div>
                <label for="unit code">Unit code</label>
                <input type="text" data-ng-model="Unit.UnitCode" />
            </div>
            <br />
            <div>
                <button data-ng-click="save()">Save</button>
                <button data-ng-click="clear()">Clear</button>
            </div>
        </div>
    </div>
</div>


